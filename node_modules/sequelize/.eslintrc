{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "no-bitwise": 0,
    "no-cond-assign": [
      2,
      "except-parens"
    ],
    "curly": 0,
    "eqeqeq": 2,
    "no-extend-native": 2,
    "wrap-iife": [
      2,
      "any"
    ],
    "indent": [
      2,
      2
    ],
    "no-use-before-define": 2,
    "new-cap": 0,
    "no-caller": 2,
    "strict": [
      2,
      "global"
    ],
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-irregular-whitespace": 2,
    "max-depth": [
      2,
      8
    ],
    "quotes": 0,
    "linebreak-style": 2,
    "comma-style": [
      2,
      "first",
      { "exceptions": { "ArrayExpression": true, "ObjectExpression": true } }
    ],
    "no-loop-func": 2
  }
}
